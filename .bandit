[bandit]
# Bandit configuration file for security scanning
exclude_dirs = .git,.vscode,__pycache__,.terraform,venv,.venv

# Skip certain tests that may cause false positives in infrastructure code
skips = B101,B603,B607,B404,B110

# Confidence levels: LOW, MEDIUM, HIGH
confidence = MEDIUM

# Severity levels: LOW, MEDIUM, HIGH  
severity = MEDIUM